div.page-header
	h1 Login
	
div
	form(role="form")
		div.form-group
			label(for="username") Username:
			input.form-control#username(ng-model="user.username")
		div.form-group
			label(for="password") Password:
			input.form-control#password(type="password", ng-model="user.password")
		button.btn.btn-default(ng-click="login()") Submit
