table.table.table-hover.table-striped
	thead
		th(style="min-width:13em") Time logged
		th(style="width:100%") Content
	tbody
		tr(ng-repeat="log in logs", ng-class="contextClass(log.type)")
			td 
				span.label.label-default {{ log.time | date:'yyyy-MM-dd HH:mm:ss Z'}}
			td {{ log.text }}
		tr(ng-show="logs.length == 0")
			td(colspan="2")
				center No logs recorded